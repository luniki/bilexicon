<h1><?= t(:edit_collocation) ?></h1>

<% form_for([@lemma, @collocation]) do |f| %>
  <%= f.error_messages %>

  <table>
    <thead>
      <tr>
        <td></td>
        <th>Englisch</th>
        <th>Deutsch</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th scope="row"><%= t :collocation_form %></th>
        <td><%= f.text_field :form1 %></td>
        <td><%= f.text_field :form2 %></td>
      </tr>

      <tr>
        <th scope="row"><%= t :collocation_syntax %></th>
        <td><%= f.text_field :syntax1 %></td>
        <td><%= f.text_field :syntax2 %></td>
      </tr>

    </tbody>
  </table>

  <p>
    <%= f.submit t(:edit) %>
    <%= t :or %>
    <%= link_to t(:cancel), @lemma %>
  </p>
<% end %>

