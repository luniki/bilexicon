<li id="<%= path_to_id(new_lemma_collocation_path(@lemma)) %>"
     class="subentry-new column span-22 last" style="display: none;">

  <% form_for([@lemma, @collocation]) do |f| -%>

    <div class="span-4 append-bottom" style="text-align: right">
      <strong><%= t(:form) %></strong><span class="required">*</span>
    </div>
    <div class="span-7">
      <%= f.text_field :form1, :class => "span-7" %>
      <%= error_message_on @collocation, :form1, :css_class => "input-error" %>
    </div>
    <div class="span-7">
      <%= f.text_field :form2, :class => "span-7" %>
      <%= error_message_on @collocation, :form2, :css_class => "input-error" %>
    </div>
    <div class="quiet span-4 last">
    </div>

    <div class="clear span-4 append-bottom" style="text-align: right">
      <strong><%= t(:syntax) %></strong><span class="required">*</span>
    </div>
    <div class="span-7">
      <%= f.text_field :syntax1, :class => "span-7 mirror-input to-collocation_syntax2" %>
      <%= error_message_on @collocation, :syntax1, :css_class => "input-error" %>
    </div>
    <div class="span-7">
      <%= f.text_field :syntax2, :class => "span-7" %>
      <%= error_message_on @collocation, :syntax2, :css_class => "input-error" %>
    </div>
    <div class="quiet span-4 last">
    </div>

    <div class="clear span-4 append-bottom" style="text-align: right">
      <strong><%= t(:synonym) %></strong>
    </div>
    <div class="span-7">
      <%= f.text_field :synonym1, :class => "span-7" %>
      <%= error_message_on @collocation, :synonym1, :css_class => "input-error" %>
    </div>
    <div class="span-7">
      <%= f.text_field :synonym2, :class => "span-7" %>
      <%= error_message_on @collocation, :synonym2, :css_class => "input-error" %>
    </div>
    <div class="quiet span-4 last">
    </div>

    <div class="clear span-4 append-bottom" style="text-align: right">
      <strong><%= t(:meanings) %></strong>
    </div>
    <div class="span-14">
      <%= f.text_field :meaning_list, :class => "span-14" %>
    </div>
    <div class="quiet span-4 last">
      <%= t :comma_separated %>
    </div>

    <div class="clear push-4 span-18 clear last">
      <button class="submit">
        <%= image_tag 'icons/tick.png' %>
        <%= t(:save) %>
      </button>
      <button class="cancel">
        <%= image_tag 'icons/cross.png' %>
        <%= t(:cancel) %>
      </button>
    </div>


  <% end %>
</li>
