<li id="<%= path_to_id(example_path(example)) %>"
    class="example column span-24 last">

  <div class="subentry span-24 last">

    <%= render :partial => "examples/margin",
               :locals => {
                 :example => example,
                 :side => 1
               } %>

    <div class="span-6 form1">
      <%= underline example.form1 %>
    </div>

    <div class="span-6 form2">
      <%= underline example.form2 %>
    </div>

    <%= render :partial => "examples/margin",
               :locals => {
                 :example => example,
                 :side => 2
               } %>

    <div class="buttons span-2 last">
      <% if current_user_is_admin then %>
        <a class="multi-button cmd-edit cmd-deleteEntry cmd-sortEntries"
           href="#"><span></span></a>
        <%= render :partial => "lemmata/quick_delete" %>
      <% else %>
        &nbsp;
      <% end %>
    </div>

  </div>

</li>
