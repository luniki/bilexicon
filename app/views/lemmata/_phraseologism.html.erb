<div id="phraseologism_<%= phraseologism.id %>" class="phraseologism span-24 last">

  <div class="span-2">
    <% if current_user_is_admin then %>
      <% link_to(edit_lemma_phraseologism_path(@lemma, phraseologism)) do %>
        <%= image_submit_tag 'icons/notebook_pencil.png' %>
      <% end %>
      <% link_to([@lemma, phraseologism], {:confirm => t(:confirm_question), :method => :delete}) do -%>
        <%= image_submit_tag 'icons/notebook_minus.png' %>
      <% end %>
    <% else %>
      &nbsp;
    <% end %>
  </div>


  <div class="span-5">
    phr:
    <% if phraseologism.synonym1 -%>
      <span class="synonym">syn: <%= h phraseologism.synonym1 %></span>
    <% end %>
  </div>

  <div class="span-6">
    <%= h phraseologism.form1 %>
  </div>

  <div class="span-6">
    <%= h phraseologism.form2 %>
  </div>

  <div class="span-5 last">
    phr:
    <% if phraseologism.synonym2 -%>
      <span class="synonym">syn: <%= h phraseologism.synonym2 %></span>
    <% end %>
  </div>

</div>

