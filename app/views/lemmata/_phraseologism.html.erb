<div id="<%= phraseologism_path(phraseologism) %>" class="phraseologism span-24 last">

  <div class="subentry span-24 last">

    <div class="span-5">
      phr:
      <% if phraseologism.synonym1.present? -%>
        <span class="synonym">syn: <%= h phraseologism.synonym1 %></span>
      <% end %>
      <% if phraseologism.meaning_list.present? -%>
        <span class="meanings">mg: <%= h phraseologism.meaning_list %></span>
      <% end %>
    </div>

    <div class="span-6">
      <%= h phraseologism.form1 %>
    </div>

    <div class="span-6">
      <%= h phraseologism.form2 %>
    </div>

    <div class="span-5">
      phr:
      <% if phraseologism.synonym2.present? -%>
        <span class="synonym">syn: <%= h phraseologism.synonym2 %></span>
      <% end %>
    </div>

    <div class="span-2 last">
      <% if current_user_is_admin then %>
        <a class="multi-button cmd-edit cmd-delete cmd-add-example" href="#"><span></span></a>
      <% else %>
        &nbsp;
      <% end %>
    </div>

  </div>

  <%= render :partial => "lemmata/example", :collection => phraseologism.examples, :locals => { :exampleable => phraseologism } %>

</div>

