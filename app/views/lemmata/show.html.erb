<table>

  <% content_tag_for(:tr, @lemma) do %>
    <th class="">
      <span class="phonetic" title="<%= t(:lemma_phonetic) %>">{<%= h @lemma.phonetic1 %>};</span>
      <span class="word_class" title="<%= t(:lemma_word_class) %>">cl: <%= h @lemma.word_class %>;</span>
      <span class="level" title="<%= t(:lemma_level) %>">l: <%= h @lemma.level %></span>
    </th>
    <th class="short"><%= h @lemma.short1 %></th>
    <th class="short"><%= h @lemma.short2 %></th>
    <th class="">
      <span class="phonetic" title="<%= t(:lemma_phonetic) %>">{<%= h @lemma.phonetic2 %>};</span>
      <span class="word_class" title="<%= t(:lemma_word_class) %>">cl: <%= h @lemma.word_class %>;</span>
      <span class="level" title="<%= t(:lemma_level) %>">l: <%= h @lemma.level %></span>
    </th>
  <% end %>

  <tr>
    <th colspan="4" class="subentries">
      <%= t(:examples) %>
      <% link_to(new_lemma_example_path(@lemma)) do %>
        <%= image_tag 'icons/notebook_plus.png' %>
      <% end %>
    </th>
  </tr>

  <% @examples.each do |example| -%>
    <% content_tag_for(:tr, example) do %>
      <td class=""></td>
      <td class="">
        <%= h example.form1 %>
      </td>
      <td class="">
        <%= h example.form2 %>
      </td>
      <td class="">
        <% link_to(edit_lemma_example_path(@lemma, example)) do %>
          <%= image_submit_tag 'icons/notebook_pencil.png' %>
        <% end %>
        <% link_to([@lemma, example], {:confirm => t(:confirm_question), :method => :delete}) do -%>
          <%= image_submit_tag 'icons/notebook_minus.png' %>
        <% end %>
      </td>
    <% end %>
  <% end %>

  <tr>
    <th colspan="4" class="subentries">
      <%= t(:valencies) %>
      <% link_to(new_lemma_valency_path(@lemma)) do %>
        <%= image_tag 'icons/notebook_plus.png' %>
      <% end %>
    </th>
  </tr>

  <% @valencies.each do |valency| -%>
    <% content_tag_for(:tr, valency) do %>
      <td class=""></td>
      <td class="">
        <%= h valency.form1 %>
      </td>
      <td class="">
        <%= h valency.form2 %>
      </td>
      <td class="">
        <% link_to(edit_lemma_valency_path(@lemma, valency)) do %>
          <%= image_submit_tag 'icons/notebook_pencil.png' %>
        <% end %>
        <% link_to([@lemma, valency], {:confirm => t(:confirm_question), :method => :delete}) do -%>
          <%= image_submit_tag 'icons/notebook_minus.png' %>
        <% end %>
      </td>
    <% end %>
  <% end %>

  <tr>
    <th colspan="4" class="subentries">
      <%= t(:collocations) %>
      <% link_to(new_lemma_collocation_path(@lemma)) do %>
        <%= image_tag 'icons/notebook_plus.png' %>
      <% end %>
    </th>
  </tr>

  <% @collocations.each do |collocation| -%>
    <% content_tag_for(:tr, collocation) do %>
      <td class=""></td>
      <td class="">
        <%= h collocation.form1 %>
      </td>
      <td class="">
        <%= h collocation.form2 %>
      </td>
      <td class="">
        <% link_to(edit_lemma_collocation_path(@lemma, collocation)) do %>
          <%= image_submit_tag 'icons/notebook_pencil.png' %>
        <% end %>
        <% link_to([@lemma, collocation], {:confirm => t(:confirm_question), :method => :delete}) do -%>
          <%= image_submit_tag 'icons/notebook_minus.png' %>
        <% end %>
      </td>
    <% end %>
  <% end %>

  <tr>
    <th colspan="4" class="subentries">
      <%= t(:phraseologisms) %>
      <% link_to(new_lemma_phraseologism_path(@lemma)) do %>
        <%= image_tag 'icons/notebook_plus.png' %>
      <% end %>
    </th>
  </tr>


  <% @phraseologisms.each do |phraseologism| -%>
    <% content_tag_for(:tr, phraseologism) do %>
      <td class=""></td>
      <td class="">
        <%= h phraseologism.form1 %>
      </td>
      <td class="">
        <%= h phraseologism.form2 %>
      </td>
      <td class="">
        <% link_to(edit_lemma_phraseologism_path(@lemma, phraseologism)) do %>
          <%= image_submit_tag 'icons/notebook_pencil.png' -%>
        <% end %>
        <% link_to([@lemma, phraseologism], {:confirm => t(:confirm_question), :method => :delete}) do -%>
          <%= image_submit_tag 'icons/notebook_minus.png' %>
        <% end %>
      </td>
    <% end %>
  <% end %>

</table>

<% content_for :sidebar do %>
  <ul>
    <li>
      <%= link_to t(:edit), edit_lemma_path(@lemma) %>
    </li>
    <li>
      <%= link_to t(:delete), lemma_path(@lemma), :confirm => t(:confirm_question), :method => :delete %>
    </li>
    <% @categories.each do |category| -%>
      <li>
        <%= link_to h(category.name), category %>
      </li>
    <% end %>
    <li>
      <%= link_to t(:add_example), new_lemma_example_path(@lemma) %>
    </li>
  </ul>
<% end %>
