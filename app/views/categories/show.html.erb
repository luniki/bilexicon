<ul class="ancestors">
  <li><%= link_to t(:top), categories_path %></li>
  <% for ancestor in @category.ancestors -%>
    <li><%= link_to ancestor.name, ancestor %></li>
  <% end %>
</ul>

<p>
  <%= link_to t(:edit), edit_category_path(@category) %>
  <%= link_to t(:delete), @category, :confirm => t(:confirm_question), :method => :delete %>
</p>

<h1><%=h @category.name %></h1>

<ul>
  <% for child in @children %>
    <li>
      <%=link_to child.name, child %>
    </li>
  <% end %>
</ul>

<%= render :partial => "new_category", :locals => { :account => @category } %>


<h2><%= t :lemmata %></h2>

<% if @lemmata.empty? then %>
  <div class="notice">
    <%= t :category_has_no_lemmata_yet %>
  </div>
<% end %>

<ul>
  <% for lemma in @lemmata %>
    <li><%= link_to "#{lemma.short1} Â· #{lemma.short2}",
                    lemma_path(lemma) %></li>
  <% end %>
</ul>

<%=link_to t(:add_lemma), new_category_lemma_url(@category) %>

