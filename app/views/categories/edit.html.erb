<h1>Editing category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, 'Name' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent_id, 'übergeordnetes Themengebiet' %><br />
    <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }.insert(0, ["", ""]) %>
  </p>
  <p>
    <%= f.submit "Ändern" %>
  </p>

<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>
