<h1><%= t :edit_category %></h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, t(:category_name) %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent_id, t(:parent_category) %><br />
    <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }.insert(0, ["", ""]) %>
  </p>
  <p>
    <%= f.submit t(:edit) %> <%= link_to t(:back), @category %>
  </p>

<% end %>
